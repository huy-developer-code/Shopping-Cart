    <section class="hero-banner bg-light py-5">
      <div class="col">
          <img src="https://i.pinimg.com/originals/e6/ee/2a/e6ee2a5888b79c216ba21bc2ca6c8939.jpg" class="" alt="Web Development"
          width="100%" height="400px" style="object-fit: scale-down;">
      </div>
    </section>
    </header>
    <main class="container">
      <%- messages('messages', locals) %>
      <div class="row">
        <div class="col-xs-12 col-md-3">
          <h3>Categories</h3>
          <ul class="list-group">
            <li class="list-group-item list-group-item-action active" aria-current="true">
              <a class="list-group-item-action nav-link active" href="/products">All products</a>
            </li>
            <% categories.forEach(function(c) { %>
            <li class="list-group-item list-group-item-action ">
              <a class="list-group-item-action nav-link" href="/products/<%= c.slug %>"><%= c.title %></a>
            </li>
            <% }) %>
          </ul>
        </div>
        <div class="col-xs-12 col-md-1"></div>
        <div class="col-xs-12 col-md-8">
      <%if(errors){%> <% errors.forEach(function(error) { %>
        <div class="alert alert-danger"><%= error.msg %></div>
        <% });%> <% }%>
</html>
