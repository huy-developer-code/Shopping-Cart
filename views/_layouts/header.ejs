  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"> CMSShoppingCart </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <% pages.forEach((page)=> { if (page.slug == "home") { %>
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/">
                  <%= page.title %>
                </a>
              </li>
              <% } else { %>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/<%= page.slug %>">
                  <%= page.title %>
                </a>
              </li>
              <% } }); %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <a class="nav-link" href="/cart/checkout">
                  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTH8zGtd4IgH-1MBcEy2-6d9j5NMxaeT-rtZcNuqTqzx9QYtGea6in5VxVg98gYz8BEnKM&usqp=CAU" alt="" width="30" height="24">
                  My Cart (<%= (typeof cart != "undefined") ? cart.length : 0 %>)
                </a>
              </li>
            <% if (user) { %>
            <li><a class="nav-link" href="/users/logout">Hi, <%= user.username %>(logout)</a></li>
            <% } else { %>
              <li><a class="nav-link" href="/users/register">Register</a></li>
              <li><a class="nav-link" href="/users/login">Log in</a></li>
              <% } %>
              <% if (user && user.admin == 1) { %>
                <li><a class="nav-link" href="/admin/pages">Admin Area</a></li>
                <% } %>
            </ul>
          </div>
        </div>
      </nav>
