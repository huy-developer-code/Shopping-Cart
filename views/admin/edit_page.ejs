<%- include('../_layouts/adminheader') %>
<div class="container">
  <h2 class="page-title">Edit a page</h2>
  <a href="/admin/pages" class="btn btn-primary">Back to all</a>
  <br /><br />

  <form method="post" action="/admin/pages/edit-page/<%= id %> ">
    <div class="form-group">
      <div class="mb-4">
        <label class="form-label" for="">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          value="<%= title %>"
          placeholder="Title"
        />
      </div>
    </div>
    <div class="form-group">
      <div class="mb-4">
        <label class="form-label" for="">Slug</label>
        <input
          type="text"
          class="form-control"
          name="slug"
          value="<%= slug %>"
          placeholder="Slug"
        />
      </div>
    </div>
    <div class="form-group">
      <div class="mb-4">
        <label class="form-label" for="">Content</label>
        <textarea
          name="content"
          id="ta"
          class="form-control"
          cols="30"
          rows="10"
          placeholder="Content"
        >
          <%= content %>
          </textarea
        >
      </div>
    </div>
    <button class="btn btn-primary">Submit</button>
  </form>
</div>
<%- include ../_layouts/adminfooter %>
